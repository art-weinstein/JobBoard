@using JobBoard.Models;

<h1>Job Details:</h1>

<h2>@Model.Title</h2>
<h4>Job Description: @Model.Description<h4>
<p>Contact the job poster: @Model.ContactInfo</p>

<form action="/jobs/delete/@Model.Id" method="post">
  <button type="submit" name="button">Delete this job</button>
</form>

<a href="/jobs/new">Add another job</a>
<a href="/jobs">View all jobs</a>