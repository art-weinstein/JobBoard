@using JobBoard.Models;
@using System.Collections.Generic;

<h1>Job Postings</h1>
@if (Model.Count == 0)
{
  <p>There are no job postings.</p>
}
<ul>
  @foreach (Job job in Model)
  {
    <li><a href="/jobs/@job.Id">@job.Title @job.Description @job.ContactInfo</a></li>
  }
</ul>

<a href="/jobs/new">Add another job posting.</a>